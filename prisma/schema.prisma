generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  // Uses connection pooling
  url = env("POSTGRES_PRISMA_URL")
  // Uses direct connection, ⚠️ make sure to keep this to `POSTGRES_URL_NON_POOLING`
  // or you'll have dangling databases from migrations
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model HabitDay {
  date String @id @unique
  habits HabitOccurence[]
  reports Report[]
  type DayType @default(NORMAL_DAY)
}

model HabitOccurence {
  id String @id @unique
  complete Boolean @default(false)

  date String
  habitDay HabitDay @relation(fields: [date], references: [date])

  typeId Int
  habitType HabitType @relation(fields: [typeId], references: [id])
}

model HabitType {
  id Int @id @unique
  name String
  category HabitCategory
  occurrences HabitOccurence[]
}

enum HabitCategory {
  MORNING_ROUTINE
  EVENING_ROUTINE
  DAILY_GOALS
  OTHER_GOALS
  PRODUCTIVE_DOWNTIME
}

model Report {
  id String @id @unique
  type ReportType
  value Int

  date String
  habitDay HabitDay @relation(fields: [date], references: [date])
}

enum ReportType {
  MORNING_MOOD
  EVENING_MOOD
  ENERGY_REPORT
  SLEEP_REPORT
  PRODUCTIVITY_REPORT
}

enum DayType {
  NORMAL_DAY
  WORK_DAY
  OUT_OF_TOWN
}